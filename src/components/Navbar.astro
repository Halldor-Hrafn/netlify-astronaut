<script>
  let lang: string | null = localStorage.getItem("lang");

  if (!lang) {
    lang = 'en';
    localStorage.setItem('lang', lang);
  }

  if (lang === 'is') {
    let debug = document.querySelector("#debug");
    debug!.textContent = "Félagsmiðlar";
    console.log("is")
  } else if (lang === 'en') {
    let debug = document.querySelector("#debug");
    debug!.textContent = "Socials";
    console.log("en")
  }

  let languageSelector = document.querySelector("#language-selector") as HTMLSelectElement;
  languageSelector.value = lang;
  languageSelector.addEventListener("change", (e: Event) => {
    const selectElement = e.target as HTMLSelectElement;
    console.log(selectElement.value)
    localStorage.setItem('lang', selectElement.value);
    location.reload();
  });
</script>